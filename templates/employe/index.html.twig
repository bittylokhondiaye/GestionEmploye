{% extends 'base.html.twig' %}

{% block title %}Employés{% endblock %}   
{% block body %}
<h1 align='center'> Voici la liste des employés </h1>
<table class="table table-hover" id="example" class="table table-striped table-bordered" style="width:100%">
  <thead class="table-dark">
    <tr>
      <th scope="col">Matricule</th>
      <th scope="col">Nom</th>
      <th scope="col">Date Naissance</th>
      <th scope="col">Salaire</th>
      <th scope="col">Categorie</th>
      <th scope="col"></th>
      

    </tr>
  </thead>
  <tbody>

    {% for employe in employes %}
    <tr class="table-active">
      {# <th scope="row">Active</th> #}
      <td>{{ employe.matricule }}</td>
      <td>{{ employe.NomComplet }}</td>
      <td>{{ employe.dateNaissance | date("d/m/y")}}</td>
      <td>{{ employe.salaire }}</td>
      <td>{{ employe.service.libelle }}</td>
      <td><a href='/employe/{{ employe.id }}/update'><button  type="button" class="btn btn-info ">Modifier</button></a>
      <a href='/employe/{{ employe.id }}/delete'><button type="button" class="btn btn-info">Supprimer</button></a>
      </td>
    </tr>
    {% endfor %}
    
</tbody>
</table
{% endblock %}
